<section class="container">
  <!-- We are not counting the number of times we visit this page -->
  <!-- But we are showing the number of times we visited the homepage -->
  <h3>Number of times you've visited the homepage: {{ankitVisits}}</h3>

  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Opening Hour: {{format_time gallery.starting_date}}</h4>
  <h4>Closing Hour: {{format_time gallery.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each gallery.paintings as |painting|}}
    {{> painting-details}}
    {{/each}}
  </section>
</section>